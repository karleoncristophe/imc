{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["styled-components-react-native"],
    "plugins": [
      {
        "no-inline-styles": false,
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "padding-horizontal",
            "padding-vertical",
            "elevation"
          ]
        }
      }
    ]
  }
}
